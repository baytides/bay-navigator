{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://baynavigator.org/schemas/cities-yaml.schema.json",
  "title": "Bay Navigator Cities YAML",
  "description": "Schema for cities.yml",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "type", "county"],
    "properties": {
      "name": { "type": "string", "minLength": 1 },
      "type": { "type": "string", "minLength": 1 },
      "county": { "type": "string", "minLength": 1 },
      "county_seat": { "type": "boolean" }
    }
  }
}
