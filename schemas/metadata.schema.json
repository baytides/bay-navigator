{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://baynavigator.org/schemas/metadata.schema.json",
  "title": "Bay Navigator API Metadata",
  "description": "Schema for /api/metadata.json",
  "type": "object",
  "required": ["version", "generatedAt", "totalPrograms", "endpoints"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "API version in semver format"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of generation"
    },
    "totalPrograms": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of programs in the dataset"
    },
    "endpoints": {
      "type": "object",
      "required": ["programs", "categories", "groups", "areas", "singleProgram"],
      "properties": {
        "programs": { "type": "string" },
        "categories": { "type": "string" },
        "groups": { "type": "string" },
        "areas": { "type": "string" },
        "singleProgram": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
