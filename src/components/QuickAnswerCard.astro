  function showClarifyCard(response: QuickAnswerResponse) {
    if (!clarifyCard || !response.categories) return;

    const messageEl = document.getElementById('clarify-message');
    const categoriesEl = document.getElementById('clarify-categories');

    if (messageEl) messageEl.textContent = response.message || '';

    if (categoriesEl) {
      // Clear existing buttons safely
      while (categoriesEl.firstChild) {
        categoriesEl.removeChild(categoriesEl.firstChild);
      }

      // Create buttons using safe DOM methods
      response.categories.forEach((cat) => {
        const button = document.createElement('button');
        button.type = 'button';
        button.className = 'clarify-category-btn';
        button.dataset.search = cat.search;
        button.setAttribute('aria-label', cat.label);

        // Create icon container
        const iconSpan = document.createElement('span');
        iconSpan.className = 'category-icon';
        iconSpan.setAttribute('aria-hidden', 'true');
        const iconSvg = createCategoryIcon(cat.icon);
        if (iconSvg) {
          iconSpan.appendChild(iconSvg);
        }

        // Create label
        const labelSpan = document.createElement('span');
        labelSpan.textContent = cat.label;

        button.appendChild(iconSpan);
        button.appendChild(labelSpan);

        // Add click handler
        button.addEventListener('click', () => {
          const searchInput = document.getElementById('search-input') as HTMLInputElement;
          if (searchInput && cat.search) {
            searchInput.value = cat.search;
            searchInput.dispatchEvent(new Event('input', { bubbles: true }));
            // Trigger search
            const event = new KeyboardEvent('keydown', { key: 'Enter', bubbles: true });
            searchInput.dispatchEvent(event);
          }
        });

        categoriesEl.appendChild(button);
      });
    }

    clarifyCard.classList.remove('hidden');
  }

