---
/**
 * QuickAnswerCard Component
 *
 * Displays quick answer responses from the search API above search results.
 * Handles different response types: crisis, clarify, guide, program, eligibility
 *
 * WCAG 2.2 AAA Compliance:
 * - Minimum contrast ratio 7:1 for text
 * - Focus indicators visible with 3px offset
 * - Screen reader announcements via aria-live
 * - Keyboard navigable interactive elements
 * - Touch targets minimum 44x44px
 * - Reduced motion support
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div
  id="quick-answer-container"
  class:list={['quick-answer-container', 'hidden', className]}
  role="region"
  aria-label="Quick answer"
  aria-live="polite"
  aria-atomic="true"
>
  <!-- Crisis Response -->
  <div id="quick-answer-crisis" class="quick-answer-card crisis hidden" role="alert">
    <div class="quick-answer-icon crisis-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
        ></path>
      </svg>
    </div>
    <div class="quick-answer-content">
      <h2 id="crisis-title" class="quick-answer-title"></h2>
      <div class="crisis-resource">
        <p id="crisis-resource-name" class="resource-name"></p>
        <p id="crisis-resource-description" class="resource-description"></p>
        <a
          id="crisis-resource-link"
          href="#"
          class="crisis-action-btn"
          role="button"
          aria-describedby="crisis-resource-description"
        >
          <span id="crisis-resource-action"></span>
        </a>
      </div>
      <div id="crisis-secondary" class="crisis-secondary hidden">
        <span class="secondary-label">Or:</span>
        <span id="crisis-secondary-action" class="secondary-action"></span>
      </div>
    </div>
  </div>

  <!-- Clarify Response (category buttons) -->
  <div id="quick-answer-clarify" class="quick-answer-card clarify hidden">
    <div class="quick-answer-icon clarify-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z"
        ></path>
      </svg>
    </div>
    <div class="quick-answer-content">
      <h2 id="clarify-message" class="quick-answer-title"></h2>
      <div
        id="clarify-categories"
        class="clarify-categories"
        role="group"
        aria-label="Help categories"
      >
        <!-- Populated by JavaScript using safe DOM methods -->
      </div>
    </div>
  </div>

  <!-- Guide Response (with optional county contact) -->
  <div id="quick-answer-guide" class="quick-answer-card guide hidden">
    <div class="quick-answer-icon guide-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"
        ></path>
      </svg>
    </div>
    <div class="quick-answer-content">
      <h2 id="guide-title" class="quick-answer-title"></h2>
      <p id="guide-message" class="quick-answer-message"></p>
      <div id="guide-county-contact" class="county-contact hidden">
        <p class="county-label">Your county contact:</p>
        <a id="guide-county-phone" href="#" class="county-phone-link">
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5" aria-hidden="true">
            <path
              d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"
            ></path>
          </svg>
          <span id="guide-county-phone-text"></span>
        </a>
        <p id="guide-county-agency" class="county-agency"></p>
      </div>
      <a id="guide-link" href="#" class="guide-link-btn">
        <span id="guide-link-text"></span>
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5" aria-hidden="true">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"></path>
        </svg>
      </a>
      <p class="guide-fallback">
        <span>Or call</span>
        <a href="tel:211" class="fallback-211">211</a>
        <span>for free assistance</span>
      </p>
    </div>
  </div>

  <!-- Program Info Response -->
  <div id="quick-answer-program" class="quick-answer-card program hidden">
    <div class="quick-answer-icon program-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
        ></path>
      </svg>
    </div>
    <div class="quick-answer-content">
      <h2 id="program-title" class="quick-answer-title"></h2>
      <p id="program-summary" class="quick-answer-message program-summary"></p>
      <div class="program-actions">
        <a id="program-guide-link" href="#" class="program-link guide-link">
          <span id="program-guide-text"></span>
        </a>
        <a id="program-apply-link" href="#" class="program-link apply-link hidden">
          <span id="program-apply-text"></span>
          <svg viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4" aria-hidden="true">
            <path
              d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Eligibility Response -->
  <div id="quick-answer-eligibility" class="quick-answer-card eligibility hidden">
    <div class="quick-answer-icon eligibility-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
      </svg>
    </div>
    <div class="quick-answer-content">
      <p class="eligibility-intro">Check if you qualify:</p>
      <a id="eligibility-link" href="#" class="eligibility-link-btn">
        <span id="eligibility-title"></span>
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5" aria-hidden="true">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"></path>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  /* Base container */
  .quick-answer-container {
    margin-bottom: 1rem;
  }

  .quick-answer-container.hidden {
    display: none;
  }

  /* Base card styles - WCAG AAA compliant */
  .quick-answer-card {
    display: flex;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
    border: 1px solid;
    background: var(--quick-answer-bg);
    border-color: var(--quick-answer-border);
  }

  .quick-answer-card.hidden {
    display: none;
  }

  /* Icon container */
  .quick-answer-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
  }

  .quick-answer-icon svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Content area */
  .quick-answer-content {
    flex: 1;
    min-width: 0;
  }

  .quick-answer-title {
    margin: 0 0 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--text-primary);
  }

  .quick-answer-message {
    margin: 0 0 0.75rem;
    font-size: 0.9375rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  /* Crisis card - high visibility */
  .quick-answer-card.crisis {
    --quick-answer-bg: #fef2f2;
    --quick-answer-border: #fecaca;
    --text-primary: #7f1d1d;
    --text-secondary: #991b1b;
  }

  .crisis-icon {
    background: #fee2e2;
    color: #dc2626;
  }

  .crisis-resource {
    margin-bottom: 0.75rem;
  }

  .resource-name {
    margin: 0;
    font-weight: 600;
    font-size: 1rem;
    color: var(--text-primary);
  }

  .resource-description {
    margin: 0.25rem 0 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .crisis-action-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: #dc2626;
    border-radius: 0.5rem;
    text-decoration: none;
    min-height: 44px;
    min-width: 44px;
    transition: background-color 0.15s ease;
  }

  .crisis-action-btn:hover {
    background: #b91c1c;
  }

  .crisis-action-btn:focus-visible {
    outline: 3px solid #dc2626;
    outline-offset: 3px;
  }

  .crisis-secondary {
    padding-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .secondary-label {
    margin-right: 0.25rem;
  }

  .secondary-action {
    font-weight: 500;
  }

  /* Clarify card */
  .quick-answer-card.clarify {
    --quick-answer-bg: #f0f9ff;
    --quick-answer-border: #bae6fd;
    --text-primary: #0c4a6e;
    --text-secondary: #075985;
  }

  .clarify-icon {
    background: #e0f2fe;
    color: #0284c7;
  }

  .clarify-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  :global(.clarify-category-btn) {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #0369a1;
    background: #ffffff;
    border: 1px solid #7dd3fc;
    border-radius: 2rem;
    cursor: pointer;
    min-height: 44px;
    min-width: 44px;
    transition:
      background-color 0.15s ease,
      border-color 0.15s ease;
  }

  :global(.clarify-category-btn:hover) {
    background: #e0f2fe;
    border-color: #38bdf8;
  }

  :global(.clarify-category-btn:focus-visible) {
    outline: 3px solid #0284c7;
    outline-offset: 3px;
  }

  :global(.clarify-category-btn .category-icon) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.25rem;
    height: 1.25rem;
  }

  :global(.clarify-category-btn .category-icon svg) {
    width: 1.125rem;
    height: 1.125rem;
  }

  /* Guide card */
  .quick-answer-card.guide {
    --quick-answer-bg: #f0fdf4;
    --quick-answer-border: #bbf7d0;
    --text-primary: #14532d;
    --text-secondary: #166534;
  }

  .guide-icon {
    background: #dcfce7;
    color: #16a34a;
  }

  .county-contact {
    margin: 0.75rem 0;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 0.5rem;
  }

  .county-label {
    margin: 0 0 0.375rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  .county-phone-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: #15803d;
    text-decoration: none;
    min-height: 44px;
  }

  .county-phone-link:hover {
    text-decoration: underline;
  }

  .county-phone-link:focus-visible {
    outline: 3px solid #16a34a;
    outline-offset: 3px;
  }

  .county-agency {
    margin: 0.25rem 0 0;
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .guide-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.625rem 1rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #ffffff;
    background: #16a34a;
    border-radius: 0.5rem;
    text-decoration: none;
    min-height: 44px;
    min-width: 44px;
    transition: background-color 0.15s ease;
  }

  .guide-link-btn:hover {
    background: #15803d;
  }

  .guide-link-btn:focus-visible {
    outline: 3px solid #16a34a;
    outline-offset: 3px;
  }

  .guide-fallback {
    margin: 0.75rem 0 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .fallback-211 {
    font-weight: 600;
    color: #15803d;
    text-decoration: none;
  }

  .fallback-211:hover {
    text-decoration: underline;
  }

  .fallback-211:focus-visible {
    outline: 3px solid #16a34a;
    outline-offset: 2px;
  }

  /* Program card */
  .quick-answer-card.program {
    --quick-answer-bg: #fefce8;
    --quick-answer-border: #fef08a;
    --text-primary: #713f12;
    --text-secondary: #854d0e;
  }

  .program-icon {
    background: #fef9c3;
    color: #ca8a04;
  }

  .program-summary {
    font-size: 0.9375rem;
  }

  .program-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .program-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 0.375rem;
    text-decoration: none;
    min-height: 44px;
    min-width: 44px;
    transition:
      background-color 0.15s ease,
      border-color 0.15s ease;
  }

  .program-link.guide-link {
    color: #854d0e;
    background: #fef9c3;
    border: 1px solid #fde047;
  }

  .program-link.guide-link:hover {
    background: #fef08a;
  }

  .program-link.apply-link {
    color: #ffffff;
    background: #ca8a04;
  }

  .program-link.apply-link:hover {
    background: #a16207;
  }

  .program-link:focus-visible {
    outline: 3px solid #ca8a04;
    outline-offset: 3px;
  }

  /* Eligibility card */
  .quick-answer-card.eligibility {
    --quick-answer-bg: #f5f3ff;
    --quick-answer-border: #ddd6fe;
    --text-primary: #3b0764;
    --text-secondary: #581c87;
  }

  .eligibility-icon {
    background: #ede9fe;
    color: #7c3aed;
  }

  .eligibility-intro {
    margin: 0 0 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .eligibility-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.625rem 1rem;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: #7c3aed;
    border-radius: 0.5rem;
    text-decoration: none;
    min-height: 44px;
    min-width: 44px;
    transition: background-color 0.15s ease;
  }

  .eligibility-link-btn:hover {
    background: #6d28d9;
  }

  .eligibility-link-btn:focus-visible {
    outline: 3px solid #7c3aed;
    outline-offset: 3px;
  }

  /* Dark mode */
  :global(.dark) .quick-answer-card.crisis {
    --quick-answer-bg: #450a0a;
    --quick-answer-border: #7f1d1d;
    --text-primary: #fecaca;
    --text-secondary: #fca5a5;
  }

  :global(.dark) .crisis-icon {
    background: #7f1d1d;
    color: #fca5a5;
  }

  :global(.dark) .crisis-action-btn {
    background: #ef4444;
  }

  :global(.dark) .crisis-action-btn:hover {
    background: #dc2626;
  }

  :global(.dark) .quick-answer-card.clarify {
    --quick-answer-bg: #0c4a6e;
    --quick-answer-border: #075985;
    --text-primary: #e0f2fe;
    --text-secondary: #bae6fd;
  }

  :global(.dark) .clarify-icon {
    background: #075985;
    color: #7dd3fc;
  }

  :global(.dark .clarify-category-btn) {
    color: #e0f2fe;
    background: #0c4a6e;
    border-color: #0369a1;
  }

  :global(.dark .clarify-category-btn:hover) {
    background: #075985;
  }

  :global(.dark) .quick-answer-card.guide {
    --quick-answer-bg: #052e16;
    --quick-answer-border: #14532d;
    --text-primary: #dcfce7;
    --text-secondary: #bbf7d0;
  }

  :global(.dark) .guide-icon {
    background: #14532d;
    color: #86efac;
  }

  :global(.dark) .county-contact {
    background: rgba(0, 0, 0, 0.2);
  }

  :global(.dark) .county-phone-link {
    color: #86efac;
  }

  :global(.dark) .guide-link-btn {
    background: #22c55e;
  }

  :global(.dark) .guide-link-btn:hover {
    background: #16a34a;
  }

  :global(.dark) .fallback-211 {
    color: #86efac;
  }

  :global(.dark) .quick-answer-card.program {
    --quick-answer-bg: #422006;
    --quick-answer-border: #713f12;
    --text-primary: #fef9c3;
    --text-secondary: #fef08a;
  }

  :global(.dark) .program-icon {
    background: #713f12;
    color: #fde047;
  }

  :global(.dark) .program-link.guide-link {
    color: #fef9c3;
    background: #713f12;
    border-color: #854d0e;
  }

  :global(.dark) .program-link.guide-link:hover {
    background: #854d0e;
  }

  :global(.dark) .program-link.apply-link {
    background: #eab308;
    color: #422006;
  }

  :global(.dark) .quick-answer-card.eligibility {
    --quick-answer-bg: #2e1065;
    --quick-answer-border: #4c1d95;
    --text-primary: #ede9fe;
    --text-secondary: #ddd6fe;
  }

  :global(.dark) .eligibility-icon {
    background: #4c1d95;
    color: #a78bfa;
  }

  :global(.dark) .eligibility-link-btn {
    background: #8b5cf6;
  }

  :global(.dark) .eligibility-link-btn:hover {
    background: #7c3aed;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .crisis-action-btn,
    :global(.clarify-category-btn),
    .guide-link-btn,
    .program-link,
    .eligibility-link-btn {
      transition: none;
    }
  }

  /* Small screens */
  @media (max-width: 640px) {
    .quick-answer-card {
      flex-direction: column;
      gap: 0.75rem;
    }

    .quick-answer-icon {
      width: 2rem;
      height: 2rem;
    }

    .quick-answer-icon svg {
      width: 1.25rem;
      height: 1.25rem;
    }

    .clarify-categories {
      gap: 0.375rem;
    }

    :global(.clarify-category-btn) {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>

<script>
  /**
   * Quick Answer Card Controller
   * Handles displaying different response types from the search API
   * Uses safe DOM methods to prevent XSS
   */

  interface QuickAnswerResponse {
    type: 'crisis' | 'clarify' | 'guide' | 'guide_with_contact' | 'program' | 'eligibility';
    title?: string;
    message?: string;
    resource?: {
      name: string;
      phone: string;
      description: string;
      action: string;
    };
    secondary?: {
      name: string;
      action: string;
    };
    categories?: Array<{
      id: string;
      label: string;
      icon: string;
      search: string;
    }>;
    guideUrl?: string;
    guideTitle?: string;
    guideText?: string;
    countyContact?: {
      name: string;
      phone: string;
      agency: string;
    };
    programId?: string;
    summary?: string;
    applyUrl?: string;
    applyText?: string;
    search?: string;
  }

  const container = document.getElementById('quick-answer-container');
  const crisisCard = document.getElementById('quick-answer-crisis');
  const clarifyCard = document.getElementById('quick-answer-clarify');
  const guideCard = document.getElementById('quick-answer-guide');
  const programCard = document.getElementById('quick-answer-program');
  const eligibilityCard = document.getElementById('quick-answer-eligibility');

  /**
   * Hide all quick answer cards
   */
  function hideAllCards() {
    container?.classList.add('hidden');
    crisisCard?.classList.add('hidden');
    clarifyCard?.classList.add('hidden');
    guideCard?.classList.add('hidden');
    programCard?.classList.add('hidden');
    eligibilityCard?.classList.add('hidden');
  }

  /**
   * Display a quick answer response
   */
  function showQuickAnswer(response: QuickAnswerResponse) {
    hideAllCards();

    if (!response || !container) return;

    switch (response.type) {
      case 'crisis':
        showCrisisCard(response);
        break;
      case 'clarify':
        showClarifyCard(response);
        break;
      case 'guide':
      case 'guide_with_contact':
        showGuideCard(response);
        break;
      case 'program':
        showProgramCard(response);
        break;
      case 'eligibility':
