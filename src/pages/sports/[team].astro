  <script>
    // Roster / Coaches tab switching
    document.querySelectorAll('.roster-tab').forEach((tab) => {
      tab.addEventListener('click', () => {
        const target = (tab as HTMLElement).dataset.tab;
        document.querySelectorAll('.roster-tab').forEach((t) => {
          t.classList.remove('roster-tab-active');
          t.classList.add('text-neutral-500', 'dark:text-neutral-400');
          t.setAttribute('aria-selected', 'false');
        });
        tab.classList.add('roster-tab-active');
        tab.classList.remove('text-neutral-500', 'dark:text-neutral-400');
        tab.setAttribute('aria-selected', 'true');

        const panels = ['roster', 'coaches'];
        panels.forEach((p) => {
          const el = document.getElementById(`panel-${p}`);
          if (el) el.classList.toggle('hidden', p !== target);
        });

        const countEl = document.getElementById('roster-count');
        if (countEl) {
          const rosterPanel = document.getElementById('panel-roster');
          const coachesPanel = document.getElementById('panel-coaches');
          if (target === 'coaches' && coachesPanel) {
            const count = coachesPanel.querySelectorAll('.grid > div').length;
            countEl.textContent = `${count} staff`;
          } else if (rosterPanel) {
            const count = rosterPanel.querySelectorAll('tbody tr').length;
            countEl.textContent = `${count} players`;
          }
        }
      });
    });

    // Roster column sorting
    document.querySelectorAll('.sort-header').forEach((header) => {
      header.addEventListener('click', () => {
        const sortKey = (header as HTMLElement).dataset.sort;
        if (!sortKey) return;
        const tbody = header.closest('table')?.querySelector('tbody');
        if (!tbody) return;

        const rows = Array.from(tbody.querySelectorAll('tr'));
        const arrow = header.querySelector('.sort-arrow');
        const isAsc = arrow?.textContent === '\u25B2';

        // Reset all arrows in same table
        header
          .closest('thead')
          ?.querySelectorAll('.sort-arrow')
          .forEach((a) => {
            a.textContent = '';
          });

        rows.sort((a, b) => {
          const aVal = (a as HTMLElement).dataset[sortKey] || '';
          const bVal = (b as HTMLElement).dataset[sortKey] || '';
          if (sortKey === 'jersey') {
            return isAsc ? parseInt(bVal) - parseInt(aVal) : parseInt(aVal) - parseInt(bVal);
          }
          return isAsc ? bVal.localeCompare(aVal) : aVal.localeCompare(bVal);
        });

        if (arrow) arrow.textContent = isAsc ? '\u25BC' : '\u25B2';
        rows.forEach((row) => tbody.appendChild(row));
      });
    });
  </script>
