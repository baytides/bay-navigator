---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import fs from 'node:fs';
import path from 'node:path';

const sportsDataPath = path.join(process.cwd(), 'public', 'data', 'sports-data.json');
let sportsData: any = { teams: {}, generated: null };
try {
  sportsData = JSON.parse(fs.readFileSync(sportsDataPath, 'utf8'));
} catch (e) {
  console.error('Failed to load sports data:', e);
}

const teamMeta: Record<
  string,
  { name: string; badge: string; schedule: string; standings: string; news: string }
> = {
  warriors: {
    name: 'Golden State Warriors',
    badge: 'NBA',
    schedule: 'https://www.nba.com/warriors/schedule',
    standings: 'https://www.nba.com/standings',
    news: 'https://www.nba.com/warriors',
  },
  giants: {
    name: 'San Francisco Giants',
    badge: 'MLB',
    schedule: 'https://www.mlb.com/giants/schedule',
    standings: 'https://www.mlb.com/standings',
    news: 'https://www.mlb.com/giants',
  },
  '49ers': {
    name: 'San Francisco 49ers',
    badge: 'NFL',
    schedule: 'https://www.49ers.com/schedule/',
    standings: 'https://www.nfl.com/standings/',
    news: 'https://www.49ers.com/news/',
  },
  sharks: {
    name: 'San Jose Sharks',
    badge: 'NHL',
    schedule: 'https://www.nhl.com/sharks/schedule',
    standings: 'https://www.nhl.com/standings',
    news: 'https://www.nhl.com/sharks/news',
  },
  valkyries: {
    name: 'Golden State Valkyries',
    badge: 'WNBA',
    schedule: 'https://www.wnba.com/team/1611661330/golden-state-valkyries/schedule',
    standings: 'https://www.wnba.com/standings',
    news: 'https://www.wnba.com/team/1611661330/golden-state-valkyries',
  },
};

export async function getStaticPaths() {
  const allowedIds = new Set(['warriors', 'giants', '49ers', 'sharks', 'valkyries']);
  let data: any = { teams: {} };
  try {
    const p = path.join(process.cwd(), 'public', 'data', 'sports-data.json');
    data = JSON.parse(fs.readFileSync(p, 'utf8'));
  } catch {}
  const ids = Object.keys(data?.teams || {}).filter((id) => allowedIds.has(id));
  return ids.map((id) => ({
    params: { team: id },
    props: { teamId: id },
  }));
}

const { teamId } = Astro.props as { teamId: string };
const team = sportsData?.teams?.[teamId] || null;
const meta = teamMeta[teamId];
const generated = sportsData?.generated ? new Date(sportsData.generated) : null;

function formatDate(dateStr: string): string {
  if (!dateStr) return '--';
  const d = new Date(`${dateStr}T12:00:00`);
  if (Number.isNaN(d.getTime())) return dateStr;
  return d.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' });
}

const roster = Array.isArray(team?.roster) ? team.roster : [];
const coaches = Array.isArray(team?.coaches) ? team.coaches : [];
const injuries = Array.isArray(team?.injuries) ? team.injuries : [];
const transactions = Array.isArray(team?.transactions) ? team.transactions : [];
const leaders = Array.isArray(team?.playerLeaders) ? team.playerLeaders : [];

const isMLB = meta?.badge === 'MLB';

function mlbHeadshot(playerId: number | string | null, size: number = 213): string {
  if (!playerId) return '';
  return `https://img.mlb.com/mlb-photos/image/upload/d_people:generic:headshot:67:current.png/w_${size},q_auto:best/v1/people/${playerId}/headshot/67/current`;
}

// Key players for the spotlight — merge stat leaders with one-per-position starters
function buildSpotlight(roster: any[], leaders: any[]): any[] {
  const seen = new Set<number>();
  const result: any[] = [];

  // 1. Add stat leaders first (they're the proven key players)
  for (const l of leaders) {
    if (!l.playerId || seen.has(l.playerId)) continue;
    const rosterEntry = roster.find((p: any) => p.id === l.playerId);
    if (rosterEntry) {
      seen.add(l.playerId);
      result.push(rosterEntry);
    }
  }

  // 2. Fill remaining positions with first active player per position
  const fieldPositions = ['C', '1B', '2B', '3B', 'SS', 'LF', 'CF', 'RF', 'DH', 'IF'];
  for (const pos of fieldPositions) {
    const p = roster.find((r: any) => r.position === pos && !seen.has(r.id));
    if (p) {
      seen.add(p.id);
      result.push(p);
    }
  }

  // 3. Add a pitcher if none from leaders
  if (!result.some((p: any) => p.position === 'P')) {
    const pitcher = roster.find((r: any) => r.position === 'P' && !seen.has(r.id));
    if (pitcher) result.push(pitcher);
  }

  return result.slice(0, 12);
}
const spotlightPlayers = isMLB ? buildSpotlight(roster, leaders) : [];
---

<BaseLayout
  title={`${meta?.name || 'Team'} - Bay Area Sports`}
  description={`Roster, schedule, and stats for ${meta?.name || 'Bay Area team'}.`}
>
  <main class="container mx-auto px-4 py-8 max-w-5xl" id="main-content">
    <Breadcrumb
      items={[
        { label: 'Sports', href: '/sports' },
        { label: meta?.name || 'Team', href: `/sports/${teamId}` },
      ]}
    />

    {
      !team || !meta ? (
        <section class="text-center py-14">
          <h1 class="text-2xl font-bold text-neutral-900 dark:text-white mb-2">
            Team Not Available
          </h1>
          <p class="text-neutral-700 dark:text-neutral-400">
            Sports data for this team is unavailable.
          </p>
        </section>
      ) : (
        <>
          <section class="mb-6 team-hero">
            <div class="flex items-start justify-between gap-4 flex-wrap">
              <div>
                <div class="inline-flex text-xs font-bold rounded-full px-2 py-0.5 bg-neutral-900 text-white dark:bg-neutral-200 dark:text-neutral-900 mb-2">
                  {meta.badge}
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white mb-1">
                  {team.name || meta.name}
                </h1>
                <p class="text-sm text-neutral-700 dark:text-neutral-300">
                  Record: {team.record?.wins ?? '-'}-{team.record?.losses ?? '-'}
                </p>
                {team.standings?.summary && (
                  <p class="text-sm text-neutral-700 dark:text-neutral-300">
                    {team.standings.summary}
                  </p>
                )}
              </div>
              <div class="flex flex-wrap gap-2">
                <a href={meta.schedule} target="_blank" rel="noopener" class="team-link">
                  Schedule
                </a>
                <a href={meta.standings} target="_blank" rel="noopener" class="team-link">
                  Standings
                </a>
                <a href={meta.news} target="_blank" rel="noopener" class="team-link">
                  Team News
                </a>
              </div>
            </div>
          </section>

          <section class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <article class="team-card">
              <h2 class="text-base font-semibold text-neutral-900 dark:text-white mb-2">
                Next Game
              </h2>
              {team.nextGame ? (
                <p class="text-sm text-neutral-700 dark:text-neutral-300">
                  {team.nextGame.home ? 'vs' : '@'} {team.nextGame.opponent} ·{' '}
                  {formatDate(team.nextGame.date)}
                  {team.nextGame.time ? ` · ${team.nextGame.time}` : ''}
                </p>
              ) : (
                <p class="text-sm text-neutral-700 dark:text-neutral-400">
                  No upcoming game listed.
                </p>
              )}
            </article>
            <article class="team-card">
              <h2 class="text-base font-semibold text-neutral-900 dark:text-white mb-2">
                Last Game
              </h2>
              {team.lastGame ? (
                <p class="text-sm text-neutral-700 dark:text-neutral-300">
                  {team.lastGame.home ? 'vs' : '@'} {team.lastGame.opponent} ·{' '}
                  {formatDate(team.lastGame.date)}
                  {team.lastGame.result ? ` · ${team.lastGame.result}` : ''}
                </p>
              ) : (
                <p class="text-sm text-neutral-700 dark:text-neutral-400">
                  No completed game listed.
                </p>
              )}
            </article>
          </section>

          {isMLB && spotlightPlayers.length > 0 && (
            <section class="team-card mb-6">
              <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-3">
                Key Players
              </h2>
              <div class="flex gap-4 overflow-x-auto pb-2 spotlight-scroll">
                {spotlightPlayers.map((p: any) => (
                  <div class="flex flex-col items-center text-center min-w-[90px]">
                    <img
                      src={mlbHeadshot(p.id, 160)}
                      alt={p.name}
                      width="72"
                      height="72"
                      loading="lazy"
                      class="rounded-full object-cover bg-neutral-100 dark:bg-neutral-700 mb-1.5"
                      style="aspect-ratio:1/1;"
                    />
                    <div class="text-sm font-medium text-neutral-900 dark:text-white leading-tight">
                      {p.name?.split(' ').pop()}
                    </div>
                    <div class="text-xs text-neutral-500 dark:text-neutral-400">
                      {p.position} · #{p.jersey || '-'}
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )}

          <section class="team-card">
            <div class="flex items-center justify-between gap-3 mb-3">
              <div class="flex items-center gap-1" role="tablist" id="roster-tabs">
                <button
                  role="tab"
                  aria-selected="true"
                  aria-controls="panel-roster"
                  class="roster-tab roster-tab-active px-3 py-1.5 text-sm font-semibold rounded-md"
                  data-tab="roster"
                >
                  Roster
                </button>
                {coaches.length > 0 && (
                  <button
                    role="tab"
                    aria-selected="false"
                    aria-controls="panel-coaches"
                    class="roster-tab px-3 py-1.5 text-sm font-semibold rounded-md text-neutral-500 dark:text-neutral-400"
                    data-tab="coaches"
                  >
                    Coaches
                  </button>
                )}
              </div>
              <span class="text-xs text-neutral-600 dark:text-neutral-400" id="roster-count">
                {roster.length} players
              </span>
            </div>

            <div id="panel-roster" role="tabpanel">
              {roster.length > 0 ? (
                <div class:list={['grid gap-4', isMLB ? 'md:grid-cols-2' : 'grid-cols-1']}>
                  {(() => {
                    const positionPlayers = isMLB
                      ? roster.filter((p: any) => p.position !== 'P')
                      : roster.filter((_: any, i: number) => i < Math.ceil(roster.length / 2));
                    const pitchersOrRest = isMLB
                      ? roster.filter((p: any) => p.position === 'P')
                      : roster.filter((_: any, i: number) => i >= Math.ceil(roster.length / 2));
                    const groups = isMLB
                      ? [
                          { label: 'Position Players', players: positionPlayers, isPitcher: false },
                          { label: 'Pitchers', players: pitchersOrRest, isPitcher: true },
                        ]
                      : [
                          { label: '', players: positionPlayers, isPitcher: false },
                          { label: '', players: pitchersOrRest, isPitcher: false },
                        ];
                    return groups.map((g) => (
                      <div>
                        {g.label && (
                          <h3 class="text-xs font-semibold uppercase tracking-wide text-neutral-500 dark:text-neutral-400 mb-2">
                            {g.label} ({g.players.length})
                          </h3>
                        )}
                        <div class="overflow-x-auto">
                          <table class="w-full text-sm">
                            <thead>
                              <tr class="border-b border-neutral-200 dark:border-neutral-700">
                                {isMLB && (
                                  <th class="py-1.5 pr-1 w-9">
                                    <span class="sr-only">Photo</span>
                                  </th>
                                )}
                                <th
                                  class="text-left font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 pr-2 w-8 cursor-pointer select-none hover:text-neutral-900 dark:hover:text-white sort-header"
                                  data-sort="jersey"
                                >
                                  # <span class="sort-arrow text-[10px]" />
                                </th>
                                <th
                                  class="text-left font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 pr-2 cursor-pointer select-none hover:text-neutral-900 dark:hover:text-white sort-header"
                                  data-sort="name"
                                >
                                  Player <span class="sort-arrow text-[10px]" />
                                </th>
                                <th class="text-left font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 w-10">
                                  Pos
                                </th>
                                {isMLB && (
                                  <th class="text-left font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1 w-10">
                                    B/T
                                  </th>
                                )}
                                {isMLB && g.isPitcher && (
                                  <>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1 whitespace-nowrap">
                                      ERA
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1 whitespace-nowrap">
                                      W-L
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1">
                                      SO
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 pl-1">
                                      IP
                                    </th>
                                  </>
                                )}
                                {isMLB && !g.isPitcher && (
                                  <>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1">
                                      AVG
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1">
                                      HR
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 px-1">
                                      RBI
                                    </th>
                                    <th class="text-right font-semibold text-neutral-700 dark:text-neutral-300 py-1.5 pl-1">
                                      OPS
                                    </th>
                                  </>
                                )}
                              </tr>
                            </thead>
                            <tbody>
                              {g.players.map((p: any) => (
                                <tr
                                  class="border-b border-neutral-100 dark:border-neutral-800"
                                  data-jersey={p.jersey || '999'}
                                  data-name={p.name || ''}
                                >
                                  {isMLB && (
                                    <td class="py-1 pr-1">
                                      <img
                                        src={mlbHeadshot(p.id, 64)}
                                        alt=""
                                        width="28"
                                        height="28"
                                        loading="lazy"
                                        class="rounded-full object-cover bg-neutral-100 dark:bg-neutral-700"
                                        style="aspect-ratio:1/1;"
                                      />
                                    </td>
                                  )}
                                  <td class="py-1.5 pr-2 text-neutral-600 dark:text-neutral-400 text-xs">
                                    {p.jersey || '-'}
                                  </td>
                                  <td class="py-1.5 pr-2 text-neutral-900 dark:text-white font-medium whitespace-nowrap">
                                    {p.name}
                                  </td>
                                  <td class="py-1.5 text-neutral-600 dark:text-neutral-400 text-xs">
                                    {p.position || '-'}
                                  </td>
                                  {isMLB && (
                                    <td class="py-1.5 px-1 text-neutral-500 dark:text-neutral-500 text-xs">
                                      {p.bats && p.throws ? `${p.bats}/${p.throws}` : '-'}
                                    </td>
                                  )}
                                  {isMLB && g.isPitcher && (
                                    <>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.era ?? '-'}
                                      </td>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.w != null && p.stats?.l != null
                                          ? `${p.stats.w}-${p.stats.l}`
                                          : '-'}
                                      </td>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.so ?? '-'}
                                      </td>
                                      <td class="py-1.5 pl-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.ip ?? '-'}
                                      </td>
                                    </>
                                  )}
                                  {isMLB && !g.isPitcher && (
                                    <>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.avg ?? '-'}
                                      </td>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.hr ?? '-'}
                                      </td>
                                      <td class="py-1.5 px-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.rbi ?? '-'}
                                      </td>
                                      <td class="py-1.5 pl-1 text-right text-neutral-700 dark:text-neutral-300 text-xs tabular-nums">
                                        {p.stats?.ops ?? '-'}
                                      </td>
                                    </>
                                  )}
                                </tr>
                              ))}
                            </tbody>
                          </table>
                        </div>
                      </div>
                    ));
                  })()}
                </div>
              ) : (
                <p class="text-sm text-neutral-700 dark:text-neutral-400">
                  Roster data is not available yet.
                </p>
              )}
            </div>

            {coaches.length > 0 && (
              <div id="panel-coaches" role="tabpanel" class="hidden">
                <div class="grid gap-3 sm:grid-cols-2">
                  {coaches.map((c: any) => (
                    <div class="flex items-center gap-3 p-2 rounded-lg bg-neutral-50 dark:bg-neutral-800/50">
                      {isMLB && c.id && (
                        <img
                          src={mlbHeadshot(c.id, 96)}
                          alt=""
                          width="40"
                          height="40"
                          loading="lazy"
                          class="rounded-full object-cover bg-neutral-200 dark:bg-neutral-700 flex-shrink-0"
                          style="aspect-ratio:1/1;"
                        />
                      )}
                      <div class="min-w-0">
                        <div class="font-medium text-sm text-neutral-900 dark:text-white truncate">
                          {c.jersey ? `#${c.jersey} ` : ''}
                          {c.name}
                        </div>
                        <div class="text-xs text-neutral-600 dark:text-neutral-400">
                          {c.title || 'Coach'}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </section>

          <section class="grid grid-cols-1 lg:grid-cols-2 gap-4 mt-6">
            <article class="team-card">
              <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-2">
                Injury Report
              </h2>
              {injuries.length > 0 ? (
                <ul class="space-y-2 text-sm">
                  {injuries.slice(0, 20).map((i: any) => (
                    <li class="border-b border-neutral-100 dark:border-neutral-800 pb-2">
                      <div class="font-medium text-neutral-900 dark:text-white">{i.player}</div>
                      <div class="text-neutral-700 dark:text-neutral-300">{i.status}</div>
                      {i.detail && (
                        <div class="text-xs text-neutral-600 dark:text-neutral-400 mt-0.5">
                          {i.detail}
                        </div>
                      )}
                    </li>
                  ))}
                </ul>
              ) : (
                <p class="text-sm text-neutral-700 dark:text-neutral-400">
                  No published injury entries right now.
                </p>
              )}
            </article>

            <article class="team-card">
              <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-2">
                Transactions / Trade Tracker
              </h2>
              {transactions.length > 0 ? (
                <div class="max-h-48 overflow-y-auto pr-1 transactions-scroll">
                  <ul class="space-y-2 text-sm">
                    {transactions.slice(0, 20).map((t: any) => (
                      <li class="border-b border-neutral-100 dark:border-neutral-800 pb-2">
                        <div class="font-medium text-neutral-900 dark:text-white">
                          {t.type || 'Transaction'}
                        </div>
                        {t.detail && (
                          <div class="text-neutral-700 dark:text-neutral-300">{t.detail}</div>
                        )}
                        <div class="text-xs text-neutral-600 dark:text-neutral-400 mt-0.5 flex items-center gap-2">
                          {t.date
                            ? new Date(t.date).toLocaleDateString('en-US')
                            : 'Date unavailable'}
                          {t.url && (
                            <a
                              href={t.url}
                              target="_blank"
                              rel="noopener"
                              class="team-link px-2 py-0.5 text-[11px]"
                            >
                              Source
                            </a>
                          )}
                        </div>
                      </li>
                    ))}
                  </ul>
                </div>
              ) : (
                <p class="text-sm text-neutral-700 dark:text-neutral-400">
                  No recent transactions found from current feeds.
                </p>
              )}
            </article>
          </section>

          {leaders.length > 0 && (
            <section class="team-card mt-6">
              <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-2">
                Individual Player Leaders
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2">
                {leaders.map((l: any) => (
                  <div class="rounded-lg border border-neutral-200 dark:border-neutral-700 p-2.5 flex items-center gap-3">
                    {isMLB && l.playerId && (
                      <img
                        src={mlbHeadshot(l.playerId, 120)}
                        alt=""
                        width="48"
                        height="48"
                        loading="lazy"
                        class="rounded-full object-cover bg-neutral-100 dark:bg-neutral-700 shrink-0"
                        style="aspect-ratio:1/1;"
                      />
                    )}
                    <div>
                      <div class="text-xs text-neutral-600 dark:text-neutral-400">{l.category}</div>
                      <div class="font-medium text-neutral-900 dark:text-white">{l.player}</div>
                      <div class="text-sm text-neutral-700 dark:text-neutral-300">
                        {l.value ?? '-'}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )}

          <p class="mt-6 text-xs text-neutral-600 dark:text-neutral-400">
            {generated
              ? `Last updated ${generated.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })} at ${generated.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' })}`
              : 'Last updated: unavailable'}
          </p>
        </>
      )
    }
  </main>

  <style>
    .team-hero {
      border: 1px solid var(--color-neutral-200, #e2e5ea);
      border-radius: 0.9rem;
      background: #fff;
      padding: 1rem 1.1rem;
    }

    .team-card {
      border: 1px solid var(--color-neutral-200, #e2e5ea);
      border-radius: 0.9rem;
      background: #fff;
      padding: 1rem 1.1rem;
    }

    .team-link {
      border: 1px solid var(--color-neutral-300, #c8cdd5);
      border-radius: 9999px;
      padding: 0.35rem 0.8rem;
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--color-neutral-700, #3b3f47);
      text-decoration: none;
    }

    .team-link:hover {
      border-color: var(--color-primary-400, #337fa6);
      color: var(--color-primary-700, #1a4f6e);
      background: var(--color-primary-50, #edf5f9);
    }

    :global(.dark) .team-hero,
    :global(.dark) .team-card {
      border-color: var(--color-neutral-700, #3b3f47);
