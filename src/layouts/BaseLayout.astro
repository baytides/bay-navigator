      // Header compact on scroll
      function setupHeaderCompact() {
        const sentinel = document.getElementById('header-sentinel');
        const header = document.getElementById('site-header');
        const logo = document.getElementById('header-logo');
        if (!sentinel || !header) return;

        // The py-3 class is on the container-page div inside header
        const container = header.querySelector('.container-page');
        if (!container) return;

        const observer = new IntersectionObserver(
          ([entry]) => {
            const isScrolled = !entry.isIntersecting;
            if (isScrolled) {
              container.classList.add('py-1.5');
              container.classList.remove('py-3');
              if (logo) {
                logo.classList.add('w-7', 'h-7');
                logo.classList.remove('w-9', 'h-9');
              }
            } else {
              container.classList.remove('py-1.5');
              container.classList.add('py-3');
              if (logo) {
                logo.classList.remove('w-7', 'h-7');
                logo.classList.add('w-9', 'h-9');
              }
            }
          },
          { threshold: 0 }
        );

        observer.observe(sentinel);
      }

      // Simple language data and state
      let simpleLanguageData: Record<string, string> | null = null;
      const originalTextMap = new Map<Node, string>();

      // Load simple language data (cached in memory)
      async function loadSimpleLanguageData() {
        if (simpleLanguageData) return simpleLanguageData;

        try {
          const response = await fetch('/data/simple-language.json');
          if (response.ok) {
            const data = await response.json();
            simpleLanguageData = data.simplifications || {};
            return simpleLanguageData;
          }
        } catch (e) {
          console.error('Failed to load simple language data:', e);
        }
        return {};
      }

      // Apply simple language replacements to text nodes
      async function applySimpleLanguage() {
        const data = await loadSimpleLanguageData();
        if (!data || Object.keys(data).length === 0) return;

        // Build regex pattern for all complex words
        const words = Object.keys(data).sort((a, b) => b.length - a.length); // Longer words first
        const pattern = new RegExp(`\\b(${words.join('|')})\\b`, 'gi');

        // Walk through text nodes in main content only
        const main = document.querySelector('main');
        if (!main) return;

        const walker = document.createTreeWalker(main, NodeFilter.SHOW_TEXT, {
          acceptNode: (node) => {
            // Skip script, style, and already processed nodes
            const parent = node.parentElement;
            if (!parent) return NodeFilter.FILTER_REJECT;
            const tagName = parent.tagName.toLowerCase();
            if (['script', 'style', 'code', 'pre', 'abbr'].includes(tagName)) {
              return NodeFilter.FILTER_REJECT;
            }
            // Skip if already has simple language class
            if (
              parent.classList.contains('text-simple') ||
              parent.classList.contains('text-normal')
            ) {
              return NodeFilter.FILTER_REJECT;
            }
            return NodeFilter.FILTER_ACCEPT;
          },
        });

        const textNodes: Text[] = [];
        let node;
        while ((node = walker.nextNode())) {
          textNodes.push(node as Text);
        }

        // Replace text in each node
        for (const textNode of textNodes) {
          const original = textNode.textContent || '';
          if (!pattern.test(original)) continue;

          // Store original text for restoration
          if (!originalTextMap.has(textNode)) {
            originalTextMap.set(textNode, original);
          }

          // Replace complex words with simple alternatives
          const simplified = original.replace(pattern, (match) => {
            const lower = match.toLowerCase();
            const simple = data[lower];
            if (simple) {
              // Preserve original capitalization
              if (match[0] === match[0].toUpperCase()) {
                return simple.charAt(0).toUpperCase() + simple.slice(1);
              }
              return simple;
            }
            return match;
          });

          textNode.textContent = simplified;
        }
      }

      // Restore original text when simple language is disabled
      function restoreOriginalText() {
        for (const [node, original] of originalTextMap) {
          if (node.textContent !== original) {
            node.textContent = original;
          }
        }
      }

      // Apply simple language on page load if enabled
      async function initSimpleLanguage() {
        if (document.documentElement.classList.contains('simple-language')) {
          await applySimpleLanguage();
        }
      }

