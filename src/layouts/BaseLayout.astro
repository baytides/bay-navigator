---
import '../styles/global.css';
import I18nLoader from '../components/i18n-loader.astro';
import LanguageSelector from '../components/LanguageSelector.astro';
import AlertBanner from '../components/AlertBanner.astro';
import OfflineBanner from '../components/OfflineBanner.astro';
import PrintQR from '../components/PrintQR.astro';
import ProgramDetailModal from '../components/ProgramDetailModal.astro';
import PWAInstallBanner from '../components/PWAInstallBanner.astro';
import SafetyExit from '../components/SafetyExit.astro';
import SkipLinks from '../components/SkipLinks.astro';
import SmartAssistant from '../components/SmartAssistant.astro';
import Toast from '../components/Toast.astro';
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description = 'Free and low-cost resources across the San Francisco Bay Area',
  image = '/og-image.png',
  type = 'website',
  publishedTime,
  modifiedTime,
} = Astro.props;

const fullTitle = title === 'Home' ? 'Bay Navigator' : `${title} | Bay Navigator`;
const siteUrl = 'https://baynavigator.org';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = new URL(image, siteUrl).href;
const pathname = Astro.url.pathname;
const isHome = pathname === '/';
const isDirectory = pathname.startsWith('/directory');
const isEligibility = pathname.startsWith('/eligibility');
const isTransit = pathname.startsWith('/transit') || pathname.startsWith('/airports');
const isAbout = pathname.startsWith('/about');
const isFavorites = pathname.startsWith('/favorites');
const isSports = pathname.startsWith('/sports');
const isSettings = pathname.startsWith('/settings');

// Load site config for Tor address
let onionAddress = '';
try {
  const configPath = path.join(process.cwd(), 'src/data/site-config.yml');
  const configContent = fs.readFileSync(configPath, 'utf8');
  const config = yaml.load(configContent) as { onion_address?: string };
  onionAddress = config?.onion_address || '';
} catch (e) {
  // Config file not found or invalid
}

// Structured data for organization
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'Bay Tides',
  alternateName: 'Bay Navigator',
  url: siteUrl,
  logo: `${siteUrl}/assets/images/logo/logo.webp`,
  description:
    'Bay Tides is a 501(c)(3) nonprofit working to protect the San Francisco Bay. Bay Navigator connects Bay Area residents with free and low-cost programs.',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Redwood City',
    addressRegion: 'CA',
    addressCountry: 'US',
  },
  areaServed: {
    '@type': 'Place',
    name: 'San Francisco Bay Area',
  },
  sameAs: ['https://github.com/baytides/baynavigator', 'https://baytides.org'],
};

// Structured data for website
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Bay Navigator',
  url: siteUrl,
  description: description,
  publisher: {
    '@type': 'Organization',
    name: 'Bay Tides',
  },
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${siteUrl}/directory?q={search_term_string}`,
    },
    'query-input': 'required name=search_term_string',
  },
};
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a4f6e" />
    <meta name="robots" content="index, follow" />
    <meta
      name="googlebot"
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Preconnect to external resources for faster loading -->
    <link rel="preconnect" href="https://baytidesstorage.blob.core.windows.net" crossorigin />
    <link rel="preconnect" href="https://nominatim.openstreetmap.org" crossorigin />
    <link rel="dns-prefetch" href="https://baytidesstorage.blob.core.windows.net" />
    <link rel="dns-prefetch" href="https://nominatim.openstreetmap.org" />

    <!-- Preload default fonts for faster first paint -->
    <link
      rel="preload"
      href="/assets/fonts/atkinson-hyperlegible-next-variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/public-sans-variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/images/favicons/favicon-96.webp"
    />
    <link rel="apple-touch-icon" href="/assets/images/favicons/apple-touch-icon.webp" />
    <link rel="manifest" href="/assets/images/favicons/site.webmanifest" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Bay Navigator - Free and low-cost resources for Bay Area residents"
    />
    <meta property="og:site_name" content="Bay Navigator" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta
      name="twitter:image:alt"
      content="Bay Navigator - Free and low-cost resources for Bay Area residents"
    />

    <!-- Additional SEO -->
    <meta name="author" content="Bay Tides" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="San Francisco Bay Area" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <title>{fullTitle}</title>

    <!-- Dark mode script (runs before render to prevent flash) -->
    <script is:inline>
      if (
        localStorage.getItem('theme') === 'dark' ||
        (!localStorage.getItem('theme') &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      }
      // Color blind mode (also runs early to prevent flash)
      if (localStorage.getItem('baynavigator_colorblind_mode') === 'true') {
        document.documentElement.classList.add('colorblind-mode');
      }
      // Underline links (also runs early to prevent flash)
      if (localStorage.getItem('baynavigator_underline_links') === 'true') {
        document.documentElement.classList.add('underline-links');
      }
      // Font family preference (also runs early to prevent flash)
      var fontPref = localStorage.getItem('fontFamily');
      if (fontPref && fontPref !== 'default') {
        document.documentElement.classList.add('font-' + fontPref);
      }
      // Save Data detection
      if (navigator.connection && navigator.connection.saveData) {
        document.documentElement.classList.add('save-data');
      }

      // Sports theme preference (applies globally from Settings)
      (function () {
        var SPORTS_THEME_KEY = 'baynavigator_sports_theme';
        var root = document.documentElement;
        var defaultTheme = {
          from: '#1a4f6e',
          to: '#0c2a3d',
          text: '#ffffff',
          subtitle: '#d8eaf3',
          accent: '#e8a935',
        };
        var teamThemes = {
          warriors: {
            from: '#1D428A',
            to: '#0f2650',
            text: '#ffffff',
            subtitle: '#dbe6fb',
            accent: '#FFC72C',
          },
          giants: {
            from: '#FD5A1E',
            to: '#7a2b10',
            text: '#ffffff',
            subtitle: '#ffe4d7',
            accent: '#111111',
          },
          '49ers': {
            from: '#AA0000',
            to: '#5e0000',
            text: '#ffffff',
            subtitle: '#ffd9d9',
            accent: '#B3995D',
          },
          sharks: {
            from: '#006D75',
            to: '#00393d',
            text: '#ffffff',
            subtitle: '#d0f0f2',
            accent: '#EA7200',
          },
          stanford: {
            from: '#8C1515',
            to: '#4e0b0b',
            text: '#ffffff',
            subtitle: '#f5dada',
            accent: '#2E2D29',
          },
          cal: {
            from: '#003262',
            to: '#001a33',
            text: '#ffffff',
            subtitle: '#d6e6f8',
            accent: '#FDB515',
          },
        };

        function applySportsTheme(team) {
          var t = teamThemes[team] || defaultTheme;
          root.style.setProperty('--theme-gradient-from', t.from);
          root.style.setProperty('--theme-gradient-to', t.to);
          root.style.setProperty('--theme-text-color', t.text);
          root.style.setProperty('--theme-subtitle-color', t.subtitle);
          root.style.setProperty('--theme-accent-color', t.accent);
          if (teamThemes[team]) {
            root.setAttribute('data-sports-theme', team);
          } else {
            root.removeAttribute('data-sports-theme');
          }
        }

        applySportsTheme(localStorage.getItem(SPORTS_THEME_KEY) || '');
        window.addEventListener('sports-theme-changed', function (event) {
          applySportsTheme((event && event.detail) || '');
        });
        window.addEventListener('storage', function (event) {
          if (event.key === SPORTS_THEME_KEY) {
            applySportsTheme(event.newValue || '');
          }
        });
      })();
    </script>

    <!-- Text settings script (runs before render to prevent flash) -->
    <script is:inline>
      (function () {
        var saved = localStorage.getItem('textSettings');
        if (saved) {
          try {
            var settings = JSON.parse(saved);
            var root = document.documentElement;
            if (settings.textSize)
              root.style.setProperty(
                '--text-size-scale',
                (parseInt(settings.textSize) / 100).toString()
              );
            var lineHeightMap = { '1': '1.6', '2': '2', '3': '2.5' };
            var letterSpacingMap = { '1': '0em', '2': '0.05em', '3': '0.1em' };
            var wordSpacingMap = { '1': '0em', '2': '0.1em', '3': '0.2em' };
            if (settings.lineHeight)
              root.style.setProperty(
                '--text-line-height',
                lineHeightMap[settings.lineHeight] || '1.6'
              );
            if (settings.letterSpacing)
              root.style.setProperty(
                '--text-letter-spacing',
                letterSpacingMap[settings.letterSpacing] || '0em'
              );
            if (settings.wordSpacing)
              root.style.setProperty(
                '--text-word-spacing',
                wordSpacingMap[settings.wordSpacing] || '0em'
              );
            if (settings.simpleLanguage) root.classList.add('simple-language');
          } catch (e) {}
        }
      })();
    </script>
    <!-- Simple analytics (privacy-friendly, localStorage only) -->
    <script is:inline src="/assets/js/simple-analytics.js"></script>
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <!-- Skip links for accessibility (WCAG 2.4.1) -->
    <SkipLinks />

    <!-- Official Banner -->
    <div class="official-banner">
      <div class="container-page flex items-center justify-between gap-2">
        <div class="flex items-center gap-2">
          <svg
            class="w-4 h-4 text-primary-700 dark:text-primary-300 hidden sm:block"
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path
              d="M10 2a8 8 0 100 16 8 8 0 000-16zM9 9a1 1 0 112 0v4a1 1 0 11-2 0V9zm1-3a1 1 0 100-2 1 1 0 000 2z"
            ></path>
          </svg>
          <span class="text-neutral-700 dark:text-neutral-300">
            <span class="hidden sm:inline">
              <strong class="font-semibold" data-i18n="banner.communityResource"
                >Bay Navigator</strong
              >
              <span data-i18n="banner.communityResourceFull"
                >is a community-maintained resource by</span
              >
            </span>
            <span class="sm:hidden">
              <strong class="font-semibold" data-i18n="banner.communityResource"
                >Bay Navigator</strong
              >
              <span data-i18n="banner.communityResourceShort">by</span>
            </span>
            <a href="https://baytides.org" class="font-medium">Bay Tides</a>
          </span>
        </div>
        {
          onionAddress && (
            <a
              href={`http://${onionAddress}`}
              class="flex items-center gap-1 sm:gap-1.5 text-xs text-purple-900 dark:text-purple-300 hover:underline font-medium flex-shrink-0"
              title="Access Bay Navigator via Tor for enhanced privacy"
            >
              <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" />
              </svg>
              <span class="hidden sm:inline" data-i18n="banner.onionAccess">
                .onion
              </span>
              <span class="sm:hidden" data-i18n="banner.onionAccessShort">
                Tor
              </span>
            </a>
          )
        }
      </div>
    </div>

    <!-- Header (compacts on scroll from 72px to 52px) -->
    <div id="header-sentinel" class="h-0 w-0" aria-hidden="true"></div>
    <header
      id="site-header"
      class="bg-white dark:bg-neutral-900 border-b border-neutral-200 dark:border-neutral-700 sticky top-0 z-40 transition-[padding] duration-200"
    >
      <div class="container-page py-3">
        <nav class="flex items-center justify-between gap-4" aria-label="Main navigation">
          <!-- Logo -->
          <a
            href="/"
            class="flex items-center gap-2.5 no-underline hover:no-underline flex-shrink-0"
          >
            <img
              src="/assets/images/logo/logo.webp"
              alt="Bay Navigator"
              class="w-9 h-9 rounded-lg transition-[width,height] duration-200"
              id="header-logo"
              width="36"
              height="36"
            />
            <span
              class="site-title text-lg font-bold text-neutral-900 dark:text-white hidden sm:inline font-display"
              >Bay Navigator</span
            >
          </a>

          <!-- Desktop Navigation (4 links: Find Programs, Transit, Sports, About) -->
          <div class="hidden md:flex items-center gap-1">
            <a
              href="/directory"
              class:list={[
                'nav-link',
                (isDirectory || isEligibility || isFavorites) && 'nav-link-active',
              ]}
              aria-current={isDirectory || isEligibility || isFavorites ? 'page' : undefined}
              data-i18n="nav.findPrograms">Find Programs</a
            >
            <a
              href="/transit"
              class:list={['nav-link', isTransit && 'nav-link-active']}
              aria-current={isTransit ? 'page' : undefined}
              data-i18n="nav.transit">Transit</a
            >
            <a
              href="/sports"
              class:list={['nav-link', isSports && 'nav-link-active']}
              aria-current={isSports ? 'page' : undefined}
              data-i18n="nav.sports">Sports</a
            >
            <a
              href="/about"
              class:list={['nav-link', isAbout && 'nav-link-active']}
              aria-current={isAbout ? 'page' : undefined}
              data-i18n="nav.about">About</a
            >
          </div>

          <!-- Right side actions -->
          <div class="flex items-center gap-1">
            <!-- Ask Carl pill (desktop) ‚Äî accent-colored -->
            <a
              href="/chat"
              class="ask-carl-pill hidden md:inline-flex items-center gap-1.5 px-3 py-1.5 bg-accent-100 dark:bg-accent-900/30 text-accent-800 dark:text-accent-400 hover:bg-accent-200 dark:hover:bg-accent-900/50 rounded-full no-underline text-sm font-medium transition-colors"
              title="Chat with Carl, your Bay Area guide"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
              </svg>
              <span data-i18n="nav.askCarl">Ask Carl</span>
            </a>

            <!-- Favorites -->
            <a
              href="/favorites"
              class="p-2 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800 relative"
              aria-label="Favorites"
              data-i18n-aria-label="nav.favorites"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
              <span
                id="nav-favorites-count"
                class="hidden absolute -top-0.5 -right-0.5 text-[10px] bg-error text-white rounded-full min-w-[1rem] h-4 px-0.5 flex items-center justify-center font-bold"
                >0</span
              >
            </a>

            <!-- Settings -->
            <a
              href="/settings"
              class:list={[
                'p-2 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800',
                isSettings && 'text-primary-700 dark:text-primary-400',
              ]}
              aria-label="Settings"
              data-i18n-aria-label="nav.settings"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </a>

            <!-- Theme Toggle -->
            <button
              id="theme-toggle"
              type="button"
              class="p-2 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800"
              aria-label="Toggle dark mode"
            >
              <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                  clip-rule="evenodd"></path>
              </svg>
              <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>

            <!-- Mobile Menu Button -->
            <button
              id="mobile-menu-btn"
              type="button"
              class="md:hidden p-2 rounded-lg text-neutral-700 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800"
              aria-label="Open menu"
              aria-expanded="false"
            >
              <!-- Hamburger icon -->
              <svg
                id="mobile-menu-icon-open"
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              <!-- Close icon (hidden by default) -->
              <svg
                id="mobile-menu-icon-close"
                class="w-6 h-6 hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </nav>
      </div>
    </header>

    <!-- Mobile Navigation (full-screen overlay) -->
    <div
      id="mobile-menu"
      class="fixed inset-0 z-50 hidden md:hidden"
      role="dialog"
      aria-modal="true"
      aria-label="Navigation menu"
    >
      <!-- Backdrop -->
      <div class="absolute inset-0 bg-neutral-900/50 backdrop-blur-sm" id="mobile-menu-backdrop">
      </div>
      <!-- Panel -->
      <div
        class="absolute inset-y-0 right-0 w-full max-w-sm bg-white dark:bg-neutral-900 shadow-lg overflow-y-auto"
      >
        <!-- Close button -->
        <div
          class="flex items-center justify-between p-4 border-b border-neutral-200 dark:border-neutral-700"
        >
          <span class="site-title text-lg font-bold text-neutral-900 dark:text-white font-display"
            >Bay Navigator</span
          >
          <button
