      // Mobile language selector
      function setupMobileLanguageSelector() {
        const STORAGE_KEY = 'baynavigator_locale';
        const SUPPORTED_LOCALES = [
          'en',
          'es',
          'zh-Hans',
          'zh-Hant',
          'vi',
          'fil',
          'ko',
          'ru',
          'fr',
          'ar',
        ];
        const buttons = document.querySelectorAll('.mobile-lang-btn');

        // Map browser language codes to our locale codes
        const browserLangMap: Record<string, string> = {
          en: 'en',
          es: 'es',
          zh: 'zh-Hans',
          'zh-cn': 'zh-Hans',
          'zh-sg': 'zh-Hans',
          'zh-hans': 'zh-Hans',
          'zh-tw': 'zh-Hant',
          'zh-hk': 'zh-Hant',
          'zh-mo': 'zh-Hant',
          'zh-hant': 'zh-Hant',
          vi: 'vi',
          fil: 'fil',
          tl: 'fil',
          ko: 'ko',
          ru: 'ru',
          fr: 'fr',
          ar: 'ar',
        };

        function getCurrentLocale(): string {
          try {
            const stored = localStorage.getItem(STORAGE_KEY);
            if (stored && SUPPORTED_LOCALES.includes(stored)) {
              return stored;
            }
          } catch {
            // localStorage not available
          }

          // Auto-detect from browser
          const languages = navigator.languages || [navigator.language];
          for (const lang of languages) {
            const normalized = lang.toLowerCase();
            if (browserLangMap[normalized]) {
              return browserLangMap[normalized];
            }
            const baseLang = normalized.split('-')[0];
            if (browserLangMap[baseLang]) {
              return browserLangMap[baseLang];
            }
          }

          return 'en';
        }

        function updateButtonStates(locale: string) {
          buttons.forEach((btn) => {
            const btnLocale = btn.getAttribute('data-locale');
            if (btnLocale === locale) {
              btn.classList.add('bg-primary-600', 'text-white');
              btn.classList.remove(
                'bg-neutral-100',
                'dark:bg-neutral-800',
                'text-neutral-700',
                'dark:text-neutral-300'
              );
            } else {
              btn.classList.remove('bg-primary-600', 'text-white');
              btn.classList.add(
                'bg-neutral-100',
                'dark:bg-neutral-800',
                'text-neutral-700',
                'dark:text-neutral-300'
              );
            }
          });
        }

        // Initialize button states
        updateButtonStates(getCurrentLocale());

        // Handle button clicks
        buttons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const locale = btn.getAttribute('data-locale');
            if (!locale) return;

            try {
              localStorage.setItem(STORAGE_KEY, locale);
            } catch {
              // localStorage not available
            }

            document.documentElement.lang = locale;

            // Handle RTL languages
            const isRtl = btn.getAttribute('data-rtl') === 'true';
            document.documentElement.dir = isRtl ? 'rtl' : 'ltr';

            updateButtonStates(locale);

            // Dispatch event for other components
            window.dispatchEvent(new CustomEvent('locale-changed', { detail: { locale } }));

            // Reload page to apply translations
            window.location.reload();
          });
        });
      }

      setupThemeToggle();
      setupMobileMenu();
      setupHeaderCompact();
      setupMobileLanguageSelector();
      setupTextSettings();
      initSimpleLanguage();
