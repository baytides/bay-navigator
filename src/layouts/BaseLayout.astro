      // PWA Install Prompt Handler
      (function () {
        let deferredPrompt = null;

        // Listen for beforeinstallprompt event
        window.addEventListener('beforeinstallprompt', (e) => {
          // Prevent browser's default install prompt
          e.preventDefault();
          // Store the event for later use
          deferredPrompt = e;

          // Check if already dismissed or installed before showing
          try {
            if (
              localStorage.getItem('pwaInstallDismissed') ||
              localStorage.getItem('pwaInstalled')
            ) {
              console.log('PWA install prompt available but previously dismissed');
              return;
            }
          } catch (err) {}

          // Show custom install button
          const installBanner = document.getElementById('pwa-install-banner');
          if (installBanner) {
            installBanner.classList.remove('hidden');
          }

          console.log('PWA install prompt available');
        });

        // Listen for app installed event
        window.addEventListener('appinstalled', () => {
          console.log('PWA was installed');
          deferredPrompt = null;

          // Hide install banner
          const installBanner = document.getElementById('pwa-install-banner');
          if (installBanner) {
            installBanner.classList.add('hidden');
          }

          // Track installation (privacy-first, local only)
          try {
            localStorage.setItem('pwaInstalled', 'true');
          } catch (e) {}
        });

        // Handle install button click
        document.addEventListener('click', async (e) => {
          const installBtn = e.target.closest('#pwa-install-btn');
          if (!installBtn || !deferredPrompt) return;

          // Show the browser's install prompt
          deferredPrompt.prompt();

          // Wait for user response
          const { outcome } = await deferredPrompt.userChoice;
          console.log('PWA install outcome:', outcome);

          // Clear the saved prompt
          deferredPrompt = null;

          // Hide banner regardless of outcome
          const installBanner = document.getElementById('pwa-install-banner');
          if (installBanner) {
            installBanner.classList.add('hidden');
          }
        });

        // Handle dismiss button
        document.addEventListener('click', (e) => {
          const dismissBtn = e.target.closest('#pwa-install-dismiss');
          if (!dismissBtn) return;

          const installBanner = document.getElementById('pwa-install-banner');
          if (installBanner) {
            installBanner.classList.add('hidden');
          }

          // Remember dismissal permanently (localStorage persists)
          try {
            localStorage.setItem('pwaInstallDismissed', 'true');
          } catch (e) {}
        });

        // Check if already dismissed or installed
        try {
          if (localStorage.getItem('pwaInstallDismissed') || localStorage.getItem('pwaInstalled')) {
            const installBanner = document.getElementById('pwa-install-banner');
            if (installBanner) {
              installBanner.classList.add('hidden');
            }
          }
        } catch (e) {}
      })();

